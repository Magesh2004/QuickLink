<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Quick Link</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="/stylesheet/sidebar.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
      margin: 0;
    }

    .main-container {
      display: flex;
      flex-direction: row;
      width: 100%;
    }

    .sidebar {
      width: 280px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      background: linear-gradient(180deg, #D1F8EF 0%, #A1E3F9 100%);
      padding-top: 20px;
      color: #27445D;
      box-shadow: 4px 0 6px rgba(0, 0, 0, 0.1);
      z-index: 1030;
    }

    .sidebar h4 {
      text-align: center;
      padding: 15px 0;
      color: #27445D;
    }

    .sidebar a {
      color: #27445D;
      padding: 12px;
      display: block;
      text-decoration: none;
      border-radius: 5px;
      margin: 8px;
      transition: 0.3s;
      font-weight: 500;
    }

    .sidebar a:hover {
      background: #578FCA;
      color: white;
      transform: scale(1.05);
    }

    .sidebar a.active {
      background: #3674B5;
      color: white;
    }

    .sidebar a.btn-danger {
      background: #E74C3C;
      border: none;
    }

    .sidebar a.btn-danger:hover {
      background: #C0392B;
    }

    .content {
      margin-left: 280px;
      width: calc(100% - 280px);
      padding: 20px;
    }

    .navbar {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .search-container {
      max-width: 400px;
      width: 100%;
    }

    .alert {
      transition: all 0.3s ease-in-out;
    }

    @media (max-width: 768px) {
  .main-container {
    flex-direction: column;
  }

  .sidebar {
    display: none;
    position: relative;
    width: 100%;
    height: auto;
    box-shadow: none;
    flex-wrap: wrap;
    justify-content: center;
    padding: 10px 0;
    background: linear-gradient(180deg, #D1F8EF 0%, #A1E3F9 100%);
  }

  .sidebar.show {
    display: flex;
  }

  .sidebar a {
    margin: 5px;
    padding: 10px 15px;
    flex: 1 0 auto;
    text-align: center;
  }

  .content {
    margin-left: 0;
    width: 100%;
  }
}

  </style>
</head>
<body>
  <div class="main-container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h4><a class="text-black" href="/link">Quick Link <i class="bi bi-box"></i></a></h4>
      <% for(let nav of Category) {%>
        <a class="btn btn-light d-flex align-items-center" href="/link?category=<%=encodeURIComponent(nav) %>">
          <i class="bi bi-tag-fill me-2"></i> <%= nav %>
        </a>
      <% } %>
      <a class="btn btn-danger text-light d-flex align-items-center" href="/link">
        <i class="bi bi-x-circle me-2"></i> Clear Category
      </a>
    </div>

    <!-- Main Content -->
    <div class="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white p-3">
        <div class="container-fluid d-flex justify-content-between align-items-center">
          <button class="btn btn-outline-secondary d-lg-none" id="toggleSidebar">
            <i class="bi bi-list" style="font-size: 1.5rem;"></i>
          </button>

          <input class="form-control search-container ms-3" type="search" placeholder="Search..." id="searchQuery" aria-label="Search" />

          <div>
            <% if(!currentUser){ %>
              <a class="btn btn-success" href="/login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
            <% } else { %>
              <a class="btn btn-danger" href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
            <% } %>
          </div>
        </div>
      </nav>

      <!-- Admin Navigation -->
      <% if(currentUser.isAdmin){ %>
      <nav class="navbar bg-white p-3 mt-3 rounded shadow-sm">
        <div class="container-fluid">
          <a class="btn btn-outline-success me-2" href="/link/new"><i class="bi bi-plus-circle"></i> Add Link</a>
          <a class="btn btn-outline-primary me-2" href="/register"><i class="bi bi-person-plus-fill"></i> Add User</a>
          <a class="btn btn-success me-2" href="/users"><i class="bi bi-people-fill"></i> Manage Users</a>
        </div>
      </nav>
      <% } %>

      <!-- Alerts -->
      <% if(success && success.length) {%>
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if(error && error.length) {%>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <%- body %>
      <script src="scripts/validator.js"></script>
      <script src="scripts/search.js"></script>
      <script src="scripts/sideBar.js"></script>
    </div>
  </div>
</body>
</html>
